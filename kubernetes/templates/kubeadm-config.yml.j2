apiVersion: kubeadm.k8s.io/v1beta3
kind: ClusterConfiguration
clusterName: {{ cluster_name }}
kubernetesVersion: v{{ kubernetes_version }}
controlPlaneEndpoint: "{{ haproxy_vip }}:{{ haproxy_api_port }}"
networking:
  serviceSubnet: {{ service_network_cidr }}
  podSubnet: {{ pod_network_cidr }}
  dnsDomain: {{ cluster_domain }}
dns:
  imageRepository: registry.k8s.io/coredns
  imageTag: v1.11.1
etcd:
  local:
    dataDir: {{ etcd_data_dir }}
    serverCertSANs:
{% for master in kubernetes_masters %}
      - {{ master.ip }}
{% endfor %}
      - {{ haproxy_vip }}
    peerCertSANs:
{% for master in kubernetes_masters %}
      - {{ master.ip }}
{% endfor %}
apiServer:
  advertiseAddress: {{ ansible_default_ipv4.address }}
  bindPort: {{ kubernetes_api_port }}
  certSANs:
{% for master in kubernetes_masters %}
    - {{ master.ip }}
{% endfor %}
    - {{ haproxy_vip }}
    - localhost
    - 127.0.0.1
    - kubernetes
    - kubernetes.default
    - kubernetes.default.svc
    - kubernetes.default.svc.{{ cluster_domain }}
  extraArgs:
    authorization-mode: Node,RBAC
    enable-admission-plugins: {{ admission_controllers | join(',') }}
{% if audit_log_enabled %}
    audit-log-path: {{ audit_log_path }}
    audit-log-maxage: "30"
    audit-log-maxbackup: "10"
    audit-log-maxsize: "100"
    audit-policy-file: /etc/kubernetes/audit-policy.yaml
{% endif %}
    enable-bootstrap-token-auth: "true"
    storage-backend: etcd3
    default-not-ready-toleration-seconds: "300"
    default-unreachable-toleration-seconds: "300"
  extraVolumes:
{% if audit_log_enabled %}
    - name: audit-log
      hostPath: /var/log/kubernetes
      mountPath: /var/log/kubernetes
      pathType: DirectoryOrCreate
    - name: audit-policy
      hostPath: /etc/kubernetes/audit-policy.yaml
      mountPath: /etc/kubernetes/audit-policy.yaml
      pathType: File
      readOnly: true
{% endif %}
controllerManager:
  extraArgs:
    bind-address: 0.0.0.0
    cluster-signing-duration: 8760h
    use-service-account-credentials: "true"
scheduler:
  extraArgs:
    bind-address: 0.0.0.0
---
apiVersion: kubeadm.k8s.io/v1beta3
kind: InitConfiguration
localAPIEndpoint:
  advertiseAddress: {{ ansible_default_ipv4.address }}
  bindPort: {{ kubernetes_api_port }}
nodeRegistration:
  criSocket: unix:///var/run/containerd/containerd.sock
  kubeletExtraArgs:
    node-ip: {{ ansible_default_ipv4.address }}
    max-pods: "{{ node_max_pods }}"
---
apiVersion: kubelet.config.k8s.io/v1beta1
kind: KubeletConfiguration
address: 0.0.0.0
authentication:
  anonymous:
    enabled: false
  webhook:
    enabled: true
authorization:
  mode: Webhook
cgroupDriver: systemd
clusterDNS:
  - {{ cluster_dns }}
clusterDomain: {{ cluster_domain }}
failSwapOn: false
healthzBindAddress: 0.0.0.0
healthzPort: 10248
maxPods: {{ node_max_pods }}
nodeStatusUpdateFrequency: 10s
readOnlyPort: 0
staticPodPath: /etc/kubernetes/manifests
streamingConnectionIdleTimeout: 4h
---
apiVersion: kubeproxy.config.k8s.io/v1alpha1
kind: KubeProxyConfiguration
bindAddress: 0.0.0.0
healthzBindAddress: 0.0.0.0
metricsBindAddress: 0.0.0.0
mode: iptables
clusterCIDR: {{ pod_network_cidr }}