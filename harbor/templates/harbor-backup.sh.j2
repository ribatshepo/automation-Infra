#!/bin/bash
# Harbor Backup Script
# Generated by Ansible for {{ inventory_hostname }}

set -euo pipefail

# Configuration
HARBOR_DIR="{{ harbor_install_dir }}/harbor"
BACKUP_DIR="{{ harbor_backup_dir | default('/backup/harbor') }}"
TIMESTAMP=$(date +%Y%m%d_%H%M%S)
BACKUP_NAME="harbor-backup-${TIMESTAMP}"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Logging function
log() {
    echo -e "${GREEN}[$(date +'%Y-%m-%d %H:%M:%S')] $1${NC}"
}

error() {
    echo -e "${RED}[$(date +'%Y-%m-%d %H:%M:%S')] ERROR: $1${NC}" >&2
}

warn() {
    echo -e "${YELLOW}[$(date +'%Y-%m-%d %H:%M:%S')] WARNING: $1${NC}"
}

# Create backup directory
mkdir -p "${BACKUP_DIR}"

log "Starting Harbor backup: ${BACKUP_NAME}"

# Stop Harbor services
log "Stopping Harbor services..."
systemctl stop harbor || {
    error "Failed to stop Harbor services"
    exit 1
}

# Create backup
log "Creating backup archive..."
cd "${HARBOR_DIR}"

# Backup Harbor configuration and data
tar -czf "${BACKUP_DIR}/${BACKUP_NAME}.tar.gz" \
    --exclude='*.log' \
    --exclude='tmp/*' \
    . || {
    error "Failed to create backup archive"
    systemctl start harbor
    exit 1
}

# Create database backup if using external database
{% if harbor_external_database %}
log "Creating database backup..."
PGPASSWORD="{{ harbor_db_password }}" pg_dump \
    -h {{ harbor_db_host }} \
    -p {{ harbor_db_port }} \
    -U {{ harbor_db_username }} \
    {{ harbor_db_name }} > "${BACKUP_DIR}/${BACKUP_NAME}-database.sql" || {
    warn "Database backup failed"
}
{% endif %}

# Start Harbor services
log "Starting Harbor services..."
systemctl start harbor || {
    error "Failed to start Harbor services"
    exit 1
}

# Verify backup
if [[ -f "${BACKUP_DIR}/${BACKUP_NAME}.tar.gz" ]]; then
    BACKUP_SIZE=$(du -h "${BACKUP_DIR}/${BACKUP_NAME}.tar.gz" | cut -f1)
    log "Backup completed successfully: ${BACKUP_NAME}.tar.gz (${BACKUP_SIZE})"
    
    # Clean up old backups (keep last 5)
    cd "${BACKUP_DIR}"
    ls -t harbor-backup-*.tar.gz | tail -n +6 | xargs -r rm --
    
    log "Backup cleanup completed"
else
    error "Backup file not created"
    exit 1
fi

log "Harbor backup process completed"